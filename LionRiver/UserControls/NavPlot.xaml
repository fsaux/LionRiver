<UserControl x:Class="LionRiver.UserControls.NavPlot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LionRiver.UserControls"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"       
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <lvc:CartesianChart Grid.Row="0" 
                            Name="Chart"
                            Series="{Binding SeriesCollection}" 
                            Zoom="X" Pan="X" 
                            DisableAnimations="True"
                            DataTooltip="{x:Null}"
                            Hoverable="False">
            <lvc:CartesianChart.AxisX>
                <lvc:Axis LabelFormatter="{Binding XFormatter}"  ShowLabels="False"
                          MinValue="{Binding MinAxisValue, Mode=TwoWay}" 
                          MaxValue="{Binding MaxAxisValue, Mode=TwoWay}"
                          RangeChangedCommand="{Binding RangeChangedCommand}">
                    <lvc:Axis.Sections>
                        <lvc:AxisSection FromValue="{Binding SelectionFromValue}" ToValue="{Binding SelectionToValue}">
                            <lvc:AxisSection.Fill>
                                <SolidColorBrush Color="Gray" Opacity=".4"></SolidColorBrush>
                            </lvc:AxisSection.Fill>
                        </lvc:AxisSection>
                        <lvc:AxisSection Value="{Binding CursorValue}" StrokeThickness="2" Stroke="#F9D648" Visibility="{Binding CursorVisible}"/>
                        <lvc:AxisSection Value="{Binding CurrentValue}" StrokeThickness="2" Stroke="LimeGreen"/>
                    </lvc:Axis.Sections>
                </lvc:Axis>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="SOG" LabelFormatter="{Binding YFormatter}" Foreground="LimeGreen" 
                          MinValue="0" 
                          MaxValue="10">
                    <lvc:Axis.Separator>
                        <lvc:Separator StrokeThickness="1" StrokeDashArray="4">
                            <lvc:Separator.Stroke>
                                <SolidColorBrush Color="#404F56" />
                            </lvc:Separator.Stroke>
                        </lvc:Separator>
                    </lvc:Axis.Separator>
                </lvc:Axis>
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>
    </Grid>
</UserControl>
